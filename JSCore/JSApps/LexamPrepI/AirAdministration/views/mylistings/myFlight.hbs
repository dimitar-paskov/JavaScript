<div class="flight-ticket">
    <div class="flight-left">
        <img src="{{image}}" alt="">
    </div>
    <div class="flight-right">
        <div>
            <h3>{{destination}}</h3><span>{{departureDate}}</span>
        </div>
        <div>
            from {{origin}} <span>{{departureTime}}</span>
        </div>
        <p>{{seatsCount}} Seats ({{costPerSeat}}$ per seat) </p>
        <a href="#/delete/:{{_id}}" class="remove">REMOVE</a>
        <a href="#/catalog/:{{_id}}" class="details">Details</a>
    </div>
</div>